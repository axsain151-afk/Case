def sum_negatives_between_extremes(arr):
    if not arr:
        return 0

    # Находим значения экстремумов
    min_val = min(arr)
    max_val = max(arr)

    # Находим ПЕРВЫЕ индексы их вхождения
    min_idx = arr.index(min_val)
    max_idx = arr.index(max_val)

    # Определяем границы отрезка между ними
    left = min(min_idx, max_idx)
    right = max(min_idx, max_idx)

    # Если экстремумы соседние или совпадают — ничего "между" нет
    if right - left <= 1:
        return 0

    # Суммируем ТОЛЬКО отрицательные элементы ВНУТРИ отрезка
    total = sum(x for x in arr[left + 1:right] if x < 0)
    return total
